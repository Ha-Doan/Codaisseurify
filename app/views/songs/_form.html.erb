<h1>New Song</h1>

<%= form_for(@song, url: { action: "create" }) do |f| %>
<div class="form-group">
    <label>Name</label>
    <%= f.text_field :name,
    class: "form-control" %>
</div>
<div class="form-group">
    <label>Category</label>
    <%= f.text_field :category,
    class: "form-control" %>
</div>
<div class="form-group">
    <label>Composer</label>
    <%= f.text_field :composer,
    class: "form-control" %>
</div>
<div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
