<h2>Songs</h2>
<br><p id="artist" data-artist-id = "<%=@artist.id%>">by <%= @artist.name %>
  <%= link_to "[Delete]", artist_path(@artist.id), :method => :delete, data: {:confirm => "Really?"} %>
</p>
<ul>
  <% @artist.songs.each do |song| %>

    <li class="song" data-song-id = "<%=song.id%>">
     <p > <%= song.name %></p>
      <p>Category: <%= song.category %></p>
      <p>Composer: <%= song.composer %></p>
      <div class="btn btn-default remove-a-song-btn">Delete</div>
    </li>
  <% end %>
</ul>
<hr>
<h3>New song</h3>
<p>Name: <input type="text" id="name" /></p>
<p>Category: <input type="text" id="category" /></p>
<p>Composer: <input type="text" id="composer" /></p>

<span class="btn btn-default" id="add-song-btn">Add new song</span>
<div class="btn btn-default" id="delete-all-songs-btn">Delete all songs</div>
