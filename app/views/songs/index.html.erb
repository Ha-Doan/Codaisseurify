<h2>Songs</h2><h5>by <%= @artist.name %> <%= link_to "[Delete]", artist_path(@artist.id),
    :method => :delete, data: {:confirm => "Really?"} %></h5>

<ul>
<% @artist.songs.each do |song| %>

<li><h3><%= song.name %>
  <%= link_to "[Delete]", artist_song_path(@artist.id, song.id),
      :method => :delete, data: {:confirm => "Really?"} %></h3>
    <h4>Category: <%= song.category %></h4>
    <h4>Composer: <%= song.composer %></ h4>
</li>
<% end %>
</ul>
<span><%= link_to "Add new song", new_artist_song_path(@artist.id), class: "btn btn-default" %></span>
<span><%= link_to "Delete all songs", artist_song_path(@artist.id, @artist.songs),:method => :delete, data: {:confirm => "Really?"}, class:  "btn btn-default" %></span>
